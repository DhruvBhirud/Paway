<header class="header">
    <nav class="header-wrap u-flex u-margin-0-15">
        {{!-- Logo --}}
        <div class="logo u-flex0 u-flexCenter">
            <a class="logo-link" href="{{@site.url}}">
                {{#if @site.logo}}
                    <img class="logo-img" src="{{img_url @site.logo size="m"}}" alt="{{@site.title}}"/>
                {{else}}
                    <span class="logo-txt">{{@site.title}}</span>
                {{/if}}
            </a>
        </div>

        {{!-- navbar --}}
        <div class="navbar u-flex1 u-flexContentCenter">{{navigation}}</div>

        <div class="header-right u-flex u-flex0 u-flexEnd">
            <ul class="social-media u-flex">
                {{!-- Facebook & Twitter --}}
                {{#if @site.facebook}}<li><a href="{{facebook_url}}" title="Facebook {{@site.facebook}}" target="_blank" rel="noopener noreferrer"></a></li>{{/if}}
                {{#if @site.twitter}}<li><a href="{{twitter_url}}" title="Twitter {{@site.twitter}}" target="_blank" rel="noopener noreferrer"></a></li>{{/if}}
            </ul>

            {{!-- Toggle Search --}}
            <div class="search-toggle"></div>
            {{!-- Toggle Menu --}}
            <div class="menu-toggle"><span></span><span></span><span></span></div>
        </div>
    </nav>
</header>
