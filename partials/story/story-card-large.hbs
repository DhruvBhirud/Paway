<article class="ttt sss u-relative u-flexContentCenter">
    {{!-- Featured Image --}}
    <a class="ttt-image" href="{{url}}">
        {{#if feature_image}}
        <img class="ttt-img u-image u-absolute0 lazyload"
            src="{{img_url feature_image size="m"}}"
            srcset="{{img_url feature_image size="xxs"}}"
            data-srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
            data-sizes="(max-width: 1000px) 400px, 700px"
            alt="{{title}}"
        />
        {{/if}}
    </a>

    <div class="ttt-body u-relative zindex2">
        {{!-- date - title - excerpt --}}
        <a href="{{url}}">
            <div class="date u-meta"><time class="datetime" datetime="{{date format=" YYYY-MM-DD "}}">{{date published_at format="MMMM DD, YYYY"}}</time></div>
            <h2 class="sss-title">{{title}}</h2>
        </a>
        {{!-- author - tags - readingTime --}}
        <div class="sss-meta u-meta">
            {{#if primary_tag}}{{#primary_tag}}<a href="{{url}}">{{name}}</a> <i class="point i-circle"></i>{{/primary_tag}}{{/if}}
            <span class="readingTime">{{reading_time seconds=(t "< 1 min read") minute=(t "1 min read") minutes=(t "% min read")}}</span></1>
        </div>
    </div>
</article>
